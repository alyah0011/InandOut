@model WebApplication3.Models.Expense

<form method="post" asp-action="DeletePost">
    <input asp-for="@Model.Id" hidden />
    @Html.AntiForgeryToken()
    <div class="border p-3">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@<!--[can comment this out will still work] ModelOnly is only at form level, All is at summary level and form level-->
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName" disabled class="form-control" /> <!--see but cannot change ==disabled-->
                    </div>
                    <div class="col-6">
                        <input asp-for="Amount" disabled class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a> <!-- same controller no need to include aspcontroller -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    } <!--client side validation  do not touch the server side (server side is in ExpenseController.cs) -->
}
